@model SchoolManagementSystem.Views.Admin.PayrollViewModel

@{
    ViewBag.Title = "AddPayroll";
}

<style>
    .text-validate {
        color: white;
    }
</style>

<div id="RegisterForm">
    <div class="container">
        <h1 class="form-heading"></h1>
        <div class="Register-form">
            <div class="main-div">
                <div class="panel" style="background-color: transparent;">
                    <h2>Add PayRolls</h2>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">

                        <select name="TeacherID" id="TeacherID" class="form-control">
                            <option selected="" value="0">Select Teacher</option>
                            @{
                                if (ViewBag.name != null)
                                {
                                    foreach (var item in ViewBag.name)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                }
                            }

                        </select>

                    </div>

                    <div class="form-group">

                        @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control", placeholder = "Designation" } })
                        @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-validate" })
                    </div>


                    <div class="form-group">

                        @Html.EditorFor(model => model.Pay, new { htmlAttributes = new { @class = "form-control", placeholder = "Pay In Rs", @Value = ViewBag.correlativo, @min = "0", @max = "9999" } })
                        @Html.ValidationMessageFor(model => model.Pay, "", new { @class = "text-validate" })
                    </div>

                    <input type="submit" value="Add" class="btn btn-primary btn-responsive" onclick="return confirm('Are you sure you wish to Add Payroll?');" />
                    <a href="~/Admin/Index2/" class="btn btn-primary btn-responsive">Back</a>
                </div>

                }
            </div>
        </div>
    </div>
</div>


