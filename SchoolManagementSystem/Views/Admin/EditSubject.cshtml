@model SchoolManagementSystem.Models.SubjectViewModel

@{
    ViewBag.Title = "EditSubject";
}


<style>
    .text-validate {
        color: white;
    }
</style>
<div id="RegisterForm">
    <div class="container">
        <h1 class="form-heading"></h1>
        <div class="Register-form">
            <div class="main-div">
                <div class="panel" style="background-color: transparent;">
                    <h2>Edit Subject</h2>

                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()



                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-validate" })

                        <div class="form-group">
                            @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control", placeholder = "*Subject Name" } })
                            @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-validate" })
                        </div>

                        <input type="submit" value="Edit" class="btn btn-primary btn-responsive" onclick="return confirm('Are you sure you want to Edit?');" />
                    </div>

                }
            </div>
        </div>
    </div>
</div>


