@model SchoolManagementSystem.Models.AdminViewModel

@{
    ViewBag.Title = "takeattendance";
}
<style>
    #Admin_Account {
        background-image: url("../images/bookstable.jpeg");
        background-repeat: no-repeat;
        background-position: left;
        background-size: cover;
        padding: 10px;
    }
</style>

<div id="Admin_Account">
    <div class="container">
        <h1 class="AdminAccount"></h1>
        <div class="AdminAccount-form">




            <h2 class="Column2">Admin</h2>
            <!--<span class="glyphicon glyphicon-user" aria-hidden="true"></span>-->
            <a href="~/Admin/Index2/" type="button" class="btn btn-primary btn-responsive"> Back</a>
            <p class="listText">Attendance of Teachers</p>

            <div class="table-responsive">
                <table class="table table-Simple">
                    <thead class="Column1">
                        <tr>

                            <th scope="col"> @Html.DisplayNameFor(model => model.listofteachers[0].TeacherID)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofteachers[0].FirstName)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofteachers[0].LastName)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofteachers[0].Email)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofteachers[0].Gender)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofteachers[0].Address)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofteachers[0].Password)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofteachers[0].Contact)</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listofteachers)
                        {
                        <tr>

                            <th scope="row">
                                @Html.DisplayFor(modelItem => item.TeacherID)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>

                            <td>
                                @Html.ActionLink("Absent", "MarkAttendance1", "Admin", new { id = item.TeacherID }, new { @class = "btn btn-primary btn-responsive" })
                            </td>
                            <td>
                                @Html.ActionLink("Present", "MarkAttendance2", "Admin", new { id = item.TeacherID }, new { @class = "btn btn-primary btn-responsive" })
                            </td>

                            <td>
                                @Html.ActionLink("Late", "MarkAttendance4", "Admin", new { id = item.TeacherID }, new { @class = "btn btn-primary btn-responsive" })
                            </td>

                            <td>
                                @Html.ActionLink("Leave", "MarkAttendance3", "Admin", new { id = item.TeacherID }, new { @class = "btn btn-primary btn-responsive" })
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
