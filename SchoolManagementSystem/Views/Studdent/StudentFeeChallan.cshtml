@model SchoolManagementSystem.Models.AdminViewModel

<style>
    #Admin_Account {
        background-image: url("../images/bookstable.jpeg");
        background-repeat: no-repeat;
        background-position: left;
        background-size: cover;
        padding: 10px;
    }
</style>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div id="Admin_Account">
            <div class="container">
                <h1 class="AdminAccount"></h1>
                <div class="AdminAccount-form">




                    <h2 class="Column2">Student Account</h2>
                    <!--<span class="glyphicon glyphicon-user" aria-hidden="true"></span>-->
                    <a href="~/Studdent/Index/" type="button" class="btn btn-primary btn-responsive"> Back</a>
                    <p class="listText">FeeChallan</p>

                </div>
                <div class="row">
                    <div class="col-xs-3">

                        <div class="form-group">

                            <select name="ClassName" id="ClassName" class="form-control">
                                <option selected="" value="0">Select Class</option>
                                @{
                                    if (ViewBag.classname != null)
                                    {
                                        foreach (var item in ViewBag.classname)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    }
                                }
                            </select>

                        </div>

                    </div>


                    <div class="col-xs-3">
                        <input type="submit" value="Generate" class="btn btn-primary btn-responsive" />
                    </div>


                </div>


                <div class="table-responsive">
                    <table class="table table-Simple">
                        <thead class="Column1">
                            <tr>


                                <th scope="col">  @Html.DisplayNameFor(model => model.listoffeechallans[0].IssueDate)</th>
                                <th scope="col">  @Html.DisplayNameFor(model => model.listoffeechallans[0].DueDate)</th>
                                <th scope="col">  @Html.DisplayNameFor(model => model.listoffeechallans[0].Fee)</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listoffeechallans)
                            {
                                <tr>

                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.IssueDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.DueDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fee)
                                    </td>


                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <div>
                    <a href="~/Admin/ExportFeeChallan/" type="button" class="btn btn-primary btn-responsive">Get Pdf</a>
                </div>
            </div>

        </div>
    }

</body>