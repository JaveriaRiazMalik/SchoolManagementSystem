@model SchoolManagementSystem.Models.AdminViewModel

<style>
    #Admin_Account {
        background-image: url("../images/bookstable.jpeg");
        background-repeat: no-repeat;
        background-position: left;
        background-size: cover;
        padding: 10px;
    }
</style>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div id="Admin_Account">
            <div class="container">
                <h1 class="AdminAccount"></h1>
                <div class="AdminAccount-form">




                    <h2 class="Column2">Date Sheet</h2>
                    <!--<span class="glyphicon glyphicon-user" aria-hidden="true"></span>-->
                    <a href="~/Studdent/Index/" type="button" class="btn btn-primary btn-responsive"> Back</a>
                    <p class="listText">Timetable</p>

                </div>

                <div class="table-responsive">
                    <table class="table table-Simple">
                        <thead class="Column1">
                            <tr>

                                <th scope="col"> @Html.DisplayNameFor(model => model.listofdatesheet[0].Day)</th>
                                <th scope="col">  @Html.DisplayNameFor(model => model.listofdatesheet[0].Duration.Date)</th>
                                <th scope="col">  @Html.DisplayNameFor(model => model.listofdatesheet[0].Subject.SubjectName)</th>
                                <th scope="col">  @Html.DisplayNameFor(model => model.listofdatesheet[0].Section.SectionName)</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listofdatesheet)
                            {
                                <tr>

                                    <th scope="row">
                                        @Html.DisplayFor(modelItem => item.Day)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Duration.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Section.SectionName)
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <div>
                    <a href="~/Admin/ExportDatesheet/" type="button" class="btn btn-primary btn-responsive">Get Pdf</a>
                </div>
            </div>

        </div>
    }


</body>